@using UtilityExtensions
@using CmsWeb.Areas.People.Models
@model int
<form id="memberdocs-form" action="/Person2/UploadDocument/@Model" class="form form-horizontal margin-top ajax span8" data-init="MemberDocsEditable" method="post" enctype="multipart/form-data">
    <fieldset class="left-gutter">
        <legend>Membership Documents</legend>
        @foreach (var i in MemberDocModel.DocForms(Model))
        {
            <div class="inline margin-top margin-left">
                <a href="@i.DocUrl" target="docpage" >
                    <img title="Uploaded: @i.DocDate.FormatDateTm()" src="@i.ImgUrl" alt="" />
                </a>
                <div>
                    <a class="name editable click-pencil" href="#" data-pk="@i.Id" data-url="/Person2/MemberDocumentUpdateName" data-title="Enter Document Name"><span>@i.FormName</span></a>
                    &nbsp;&nbsp;<a class="ajax" href="/Person2/DeleteDocument/@Model/@i.Id" data-confirm="Are you sure you want to delete this document?"><i class="fa fa-times"></i></a>
                </div>
            </div>
        }
        <hr/>
        <div>
            Select Image File To Upload:
            <input type="file" name="doc" />
            <input type="submit" name="Upload" value="Submit" class="btn btn-primary" />
            <div style="color: Red;">@Html.ValidationMessage("doc")</div>
        </div>
    </fieldset>
</form>
