@model CmsWeb.Areas.Giving.Models.GivingPageItem
@{
    ViewBag.Title = Model.PageName;
    Layout = "~/Views/Shared/Giving.cshtml";
}
@section head {
<style type="text/css">
    .editableform .editable-date.well {
        background: transparent;
        border: none;
        box-shadow: none;
    }
    #main .control-label {
        color: #4d4d4d;
        font-weight: 500;
    }
    #main .form-control:not(.input-sm) {
        font-size: 16px;
        padding: 8px 12px;
        height: 40px;
    }
    #main .btn:not(.btn-sm):not(.btn-lg) {
        font-size: 16px;
    }
    #main .btn-primary {
        background-color: #003f72;
    }
    #main a:not(.btn):not(.dropdown-item),
    #main .btn-link {
        color: #003f72;
    }
    #main .editable-click, #main a.editable-click, #main a.editable-click:hover {
        border-color: #003f72;
    }
    #main .gift {
        position: relative;
    }
    #main button.close {
        position: absolute;
        right: 15px;
        top: 13px;
        z-index: 99;
    }
    #main .give-type .btn,
    #main .payment-type .btn {
        padding: 8px 30px;
    }
    #main div.form-group select.form-control:not(.input-sm) {
        height: 40px !important;
    }
    .popover.bs-popover-bottom .arrow {
        top: -10px;
    }
    .popover-body a {
        color: #003f72;
        text-decoration: underline;
    }
    .form-group small.text-danger {
        display: none;
    }
    .form-group.has-error small.text-danger {
        display: block;
    }
    #main .radio {
        margin: 0;
    }
    #main .radio input {
        position: absolute;
        opacity: 0;
        cursor: pointer;
        height: 0;
        width: 0;
    }

    #main .radio .switch {
        position: absolute;
        top: 0;
        left: 0;
        height: 20px;
        width: 20px;
        border: 2px solid #4d4d4d;
        border-radius: 100%;
    }

    #main .radio:hover input ~ .switch,
    #main .radio input:checked ~ .switch {
        border-color: #003f72;
    }

    #main .radio .switch:after {
        content: "";
        position: absolute;
        display: none;
        top: 3px;
        left: 3px;
        width: 10px;
        height: 10px;
        border-radius: 100%;
        background: #003f72;
    }

    #main .radio input:checked ~ .switch:after {
        display: block;
    }
</style>
}
<div id="main" class="giving">
    <giving-container page-prop="@Json.Encode(Model)" type="@ViewBag.Type" fund="@ViewBag.Fund" amount="@ViewBag.Amount"></giving-container>
</div>
