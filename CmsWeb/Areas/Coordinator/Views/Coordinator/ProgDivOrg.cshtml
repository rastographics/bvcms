@{
    Layout = "~/Views/Shared/_LayoutCheckIn.cshtml" ;
    ViewBag.Title = "Check-In Coordinator";
    ViewBag.PageHeader = "Check-In Coordinator";
}

@ViewExtensions2.jQuery()
@ViewExtensions2.jQueryUI()

<style>
    .block {
        border: 1px solid lightskyblue;
        text-align: center;
        vertical-align: middle;
    }
    .smcircle {
        background: lightskyblue;
        border-radius: 20px;
        color: white;
        height: 20px;
        font-weight: bold;
        width: 20px;
        display: table;
        margin: 0px 0px;
    }
    .circle {
        height: 100px;
        width: 100px;
        border-radius: 100px;
        background: #003f72;
        color: white;
        font-size: 40px;
        text-align: center;
        display: table-cell;
        overflow: hidden;
        vertical-align: middle!important;
    }
    .circle p {
        vertical-align: middle;
        display: table-cell;
    }
    .highlighted {
        background: lightgrey;
    }
    .middle {
        text-align: center;
        margin: 0 auto;
        padding: 0;
    }

    .labelhighlighted {
        min-height: 20px;
        min-width: 100%;
        background: lightsteelblue;
        border-style: outset;
        border: 2px;
        vertical-align: middle;
        line-height: 3;
        padding: 0;
        margin: 0;
    }

    .labelnothighlighted {
        min-height: 20px;
        min-width: 100%;
        background: none;
        border-style: outset;
        border: 2px;
        vertical-align: middle;
        line-height: 3;
        padding: 0;
        margin: 0;
    }

    .active {
        color: green;
    }	    
</style>

