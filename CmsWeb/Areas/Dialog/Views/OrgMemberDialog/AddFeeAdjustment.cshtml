@model CmsWeb.Areas.Dialog.Models.OrgMemberTransactionModel
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4>@Model.OrgName</h4>
            <strong>Adding Fee Adjustment for @Model.Name</strong>
        </div>
        <div class="modal-body">
            @Html.HiddenFor(m => m.OrgId)
            @Html.HiddenFor(m => m.PeopleId)
            @Html.HiddenFor(m => m.Group)
            @Html.HiddenFor(m => m.AdjustFee)
            @Html.DisplayFor(m => m.TransactionSummary.TotalFee, new { label = "Total Fee" })
            @Html.EditorFor(m => m.Payment, new { label = "Fee Adjustment", help = "A negative number increases balance." })
            @Html.EditorFor(m => m.Description)
        </div>
        <div class="modal-footer">
            <a href="/OrgMemberDialog/Display" class="btn btn-default ajax">Cancel</a>
            <a id="add-mission-support" href="/OrgMemberDialog/PostTransaction" class="btn ajax btn-primary">Add Transaction</a>
        </div>
    </div>
</div>