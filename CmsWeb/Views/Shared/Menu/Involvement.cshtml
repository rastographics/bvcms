@{
    CMSDataContext Db = ViewExtensions2.CurrentDatabase;
    var recentInvolvements = Util2.MostRecentOrgs;
}
<li class="dropdown dropdown-large">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <span class="visible-xs-inline"><i class="fa fa-group"></i>&nbsp;&nbsp;</span>
        <span class="hidden-lg hidden-xs">Invs</span>
        <span class="visible-lg-inline visible-xs-inline">Involvements</span>
        <span class="caret"></span>
    </a>
    <ul class="dropdown-menu dropdown-menu-large row">
        <li class="col-sm-6">
            <ul>
                <li class="dropdown-header dropdown-sub-header">Manage Involvements</li>
                @Helper.LiAnchorLink("Search", "/InvolvementSearch/")
                @if (User.IsInRole("Edit"))
                {
                    <li>@Helper.JQueryIdLink("Add New Involvement", "addinv")</li>
                }

                @if (User.IsInRole("Checkin") && Db.Setting("EnableCheckinCoordinator"))
                {
                    <li>@Helper.LiAnchorLink("Check-In Coordinator", "/CheckInCoordinator")</li>
                }
                @Helper.LiAnchorLink("Coupons", "/Coupons/", User.IsInRole("Coupon"))
                @Helper.LiAnchorLink("Org Members", "/OrgMembers/", display: User.IsInRole("ManageOrgMembers"))
                @Helper.LiAnchorLink("Promotion", "/Promotion/", User.IsInRole("ManageOrgMembers"))
            </ul>
        </li>
        <li class="col-sm-6">
            <ul>
                @if (recentInvolvements.Any())
                {
                    <li class="dropdown-header dropdown-sub-header">Recently Viewed</li>
                    foreach (var o in Util2.MostRecentOrgs)
                    {
                        @Helper.LiAnchorLink(o.Name, "/Inv/" + o.Id)
                    }
                }
            </ul>
        </li>
    </ul>
</li>

